@{
    ViewData["Title"] = "Add";
}
@model Product
<div class="container mt-3">
    <h2>Ürün Ekle</h2>
  <form class="form-horizontal" asp-controller="Products" asp-action="Add" method="post">
  <div class="mb-3 mt-3">
    <label class="form-label" for="Name">Ürün Adı:</label>
    <input type="text" class="form-control"  placeholder="Ürün adını giriniz." asp-for="Name">
  </div>
  <div class="mb-3">
    <label for="Price" class="form-label">Ürün Fiyatı:</label>
    <input type="text" class="form-control"  placeholder="Ürün Fiyatı" asp-for="Price">
  </div>
    <div class="mb-3">
    <label for="Stock" class="form-label">Ürün Stok:</label>
    <input type="text" class="form-control"  placeholder="Ürün stok" asp-for="Stock">
  </div>

  <button type="submit" class="btn btn-primary">Ürün Ekle</button>
</form>
</div>