@{
    ViewData["Title"] = "Index";
}
@model List<Product>
<div class="row justify-content-center">
    <div class="col-md-8 ">
        @* <a class="btn btn-primary" href="products/add >Ürün Ekle</a> *@
        <a class="btn btn-primary mb-2" asp-controller="products" asp-action="add" >Ürün Ekle</a>

        <table class="table table-dark table-striped text-center">
            <thead>
                <tr>
                    <th>Ürün ID</th>
                    <th>Ürün Adı</th>
                    <th>Fiyat</th>
                    <th>Stok</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Price</td>
                        <td>@item.Stock</td>
                        <td><a class="btn btn-success" asp-controller="products" asp-action="update" asp-route-id="@item.Id">Güncelle</a>
                            <a asp-controller="products" asp-action="remove" asp-route-id="@item.Id"
                                class="btn btn-danger">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

</div>